@model CST465_project.Models.CommentCreateDto

<form class="comment-form mt-3" method="post" novalidate>
    @Html.AntiForgeryToken()
    <h4>Comments</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" id="commentVisualizationId" name="VisualizationId" value="@Model?.VisualizationId" />

    <div class="mb-2">
        <label class="form-label">Posting as</label>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <div class="form-control-plaintext text-white">@(User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? User.Identity.Name)</div>
        }
        else
        {
            <div class="form-control-plaintext text-white">Anonymous</div>
        }
    </div>

    <div class="mb-2">
        <label for="commentContent" class="form-label">Comment</label>
        <textarea asp-for="Content" id="commentContent" name="Content" class="form-control" aria-label="Your comment" required maxlength="1000" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div>
        <button class="btn btn-primary" type="submit">Post Comment</button>
    </div>
</form>
